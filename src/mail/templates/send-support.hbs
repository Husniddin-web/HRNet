<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Support Response</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body
    class="bg-light d-flex justify-content-center align-items-center vh-100"
  >

    <div class="card shadow-lg p-4" style="max-width: 500px; width: 100%;">
      <h2 class="text-center text-primary">Support Response</h2>
      <hr />
      <div class="mb-3">
        <strong class="text-secondary">📩 Message:</strong>
        <p class="text-dark">{{response.message}}</p>
      </div>
      <div class="mb-3">
        <strong class="text-secondary">❓ Problem:</strong>
        <p class="text-danger">{{response.problem}}</p>
      </div>
    </div>

  </body>
</html>